{{!
    @template mod_studentquiz/comment_history

    Template for rendering comment history for studentquiz.

    Example context (json):
    {
        "id": 1,
        "authorname": "Teacher",
        "posttime": "6 December 2019, 4:06 PM",
        "content": "text content"
    }
}}
<div class="studentquiz-comment-item" id="comment_history_{{ id }}" data-id="{{ id }}">
    <div class="studentquiz-comment-item-outerbox">
        <div class="studentquiz-comment-author">
            <span class="studentquiz-comment-postdate">{{ posttime }}</span>
            <span> | </span>
            {{#authorprofileurl}}
                <a href={{authorprofileurl}}>{{authorname}}</a>
            {{/authorprofileurl}}
            {{^authorprofileurl}}
                {{authorname}}
            {{/authorprofileurl}}
        </div>
        <div class="studentquiz-comment-text">
            {{{ content }}}
        </div>
    </div>
</div>
