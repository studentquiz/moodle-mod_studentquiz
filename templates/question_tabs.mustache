{{!
    @template mod_studentquiz/question_tabs

    Template for rendering in comment area for studentquiz.

    Example context (json):
    {
        "tabs": [
            {
                "id": "public-tab",
                "name": "Public comments",
                "content": "Public comments' content"
            },{
                "id": "private-tab",
                "name": "Private comments",
                "content": "Private comments' content",
                "active": true
            }
        ]
    }
}}

<div class="studentquiz_behaviour question-nav-tabs">
    <div class="nav nav-tabs" role="tablist">
        {{#tabs}}
            <a
                class="nav-item nav-link {{#active}}active{{/active}}"
                href="#{{id}}"
                data-toggle="tab"
                data-tab-id="{{id}}"
                role="tab"
                {{#active}}aria-selected="true"{{/active}}{{^active}}aria-selected="false"{{/active}}
            >{{name}}</a>
        {{/tabs}}
    </div>
    <div class="tab-content">
        {{#tabs}}
            <div class="tab-pane {{#active}}active{{/active}}" id="{{id}}" role="tabpanel">{{{content}}}</div>
        {{/tabs}}
    </div>
</div>

{{#js}}
    require(['mod_studentquiz/question_nav_tabs'], function(navTabs) {
        navTabs.init();
    });
{{/js}}
